{  
   "$schema":"http://json-schema.org/draft-07/schema#",
   "$id":"http://example.com/product.schema.json",
   "title":"Product",
   "description":"A product from Acme's catalog",
   "type":"object",
   "properties":{  
      "state":{  
         "type":"string"
      },
      "country":{  
         "type":"string"
      }
   }, "required":[  
      "country"
   ],
   "if":{  
      "properties":{  
         "country":{  
            "const":"USA"
         }
      }
   },
   "then":{  
      "properties":{  
         "state":{  
            "not":{  
               "const":""
            }
         }
      },
      "required":[  
         "state"
      ]
   },
   "else":{  
      "properties":{  
         "state":{  
            "const":""
         }
      }
   }
}